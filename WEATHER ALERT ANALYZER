public class WeatherAlert {

    public static void main(String[] args) {
        String[] city = {"Chennai", "Madurai", "Salem"};
        int[] rainfall = {120, 45, 210};

        for(int i = 0; i < city.length; i++) {
            System.out.println("City: " + city[i]);

            if(rainfall[i] > 200)
                System.out.println("Red Alert üö®");
            else if(rainfall[i] > 100)
                System.out.println("Orange Alert ‚ö†Ô∏è");
            else
                System.out.println("Normal Weather ‚úÖ");

            System.out.println();
        }
    }
}
