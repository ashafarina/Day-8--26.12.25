public class SmartWatering {

    static void waterDecision(String plant, int moisture) {
        System.out.println("Plant: " + plant);
        System.out.println("Soil Moisture: " + moisture + "%");

        if(moisture < 30)
            System.out.println("Action: Water Immediately ðŸš¿");
        else if(moisture < 60)
            System.out.println("Action: Monitor âš ï¸");
        else
            System.out.println("Action: No Water Needed âœ…");

        System.out.println();
    }

    public static void main(String[] args) {
        String[] plants = {"Rose", "Tulsi", "Aloe"};
        int[] moisture = {25, 55, 70};

        for(int i = 0; i < plants.length; i++) {
            waterDecision(plants[i], moisture[i]);
        }
    }
}
